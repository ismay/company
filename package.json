{
  "name": "wolffsoftwareengineering.nl",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint:eslint": "eslint --ignore-path .gitignore .",
    "lint:prettier": "prettier --ignore-path .gitignore --check .",
    "lint:stylelint": "stylelint --ignore-path .gitignore '**/*.css'",
    "prepare": "husky install",
    "storybook:build": "build-storybook",
    "storybook:start": "start-storybook -p 6006 --quiet",
    "pretest:e2e": "npm run dev & wait-on -s 1 http://localhost:3000",
    "test:e2e": "cypress open --e2e --config-file .cypress/cypress.config.js",
    "posttest:e2e": "kill-port 3000"
  },
  "dependencies": {
    "@panelbear/panelbear-nextjs": "1.0.4",
    "graphql": "16.6.0",
    "graphql-request": "5.0.0",
    "next": "12.3.1",
    "next-mdx-remote": "4.1.0",
    "prop-types": "15.8.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "12.3.1",
    "@percy/cli": "1.11.0",
    "@percy/cypress": "3.1.2",
    "@storybook/addon-essentials": "6.5.12",
    "@storybook/addon-links": "6.5.12",
    "@storybook/builder-webpack5": "6.5.12",
    "@storybook/manager-webpack5": "6.5.12",
    "@storybook/react": "6.5.12",
    "@testing-library/cypress": "8.0.3",
    "cypress": "10.9.0",
    "eslint": "8.25.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-react": "7.31.10",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-sort": "2.4.0",
    "husky": "8.0.1",
    "kill-port": "2.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "stylelint": "14.13.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "28.0.0",
    "stylelint-order": "5.0.0",
    "wait-on": "6.0.1"
  },
  "renovate": {
    "extends": [
      "config:js-app",
      ":dependencyDashboardApproval",
      ":enableVulnerabilityAlerts"
    ]
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ],
    "*.{js,css,json,md,yml}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "plugin:sort/recommended",
      "plugin:cypress/recommended",
      "plugin:@next/next/recommended",
      "prettier"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "never"
      ],
      "import/no-duplicates": "error",
      "import/no-absolute-path": "error",
      "import/no-self-import": "error",
      "import/no-cycle": "error",
      "import/no-useless-path-segments": "error",
      "jsx-a11y/anchor-is-valid": "off",
      "react/jsx-handler-names": "error",
      "react/no-unused-prop-types": "error",
      "react/default-props-match-prop-types": "error",
      "react/jsx-boolean-value": "error",
      "react/no-multi-comp": "error",
      "react/jsx-no-undef": "error",
      "react/jsx-curly-brace-presence": "error",
      "react/jsx-fragments": "error",
      "react/jsx-pascal-case": "error",
      "react/jsx-no-useless-fragment": "error",
      "react/no-unstable-nested-components": "error",
      "react/destructuring-assignment": [
        "error",
        "always"
      ],
      "react/boolean-prop-naming": [
        "error",
        {
          "validateNested": true
        }
      ],
      "react/function-component-definition": [
        "error",
        {
          "namedComponents": "function-declaration"
        }
      ],
      "react/jsx-filename-extension": "off",
      "react/react-in-jsx-scope": "off",
      "react/jsx-sort-props": [
        "warn",
        {
          "shorthandFirst": true,
          "callbacksLast": true
        }
      ],
      "sort/exports": "off",
      "no-html-link-for-pages": "off"
    },
    "ignorePatterns": [
      "!.cypress/",
      "!.storybook/"
    ],
    "overrides": [
      {
        "files": [
          "*.stories.js"
        ],
        "rules": {
          "react/function-component-definition": [
            "error",
            {
              "namedComponents": "arrow-function",
              "unnamedComponents": "arrow-function"
            }
          ],
          "react/no-multi-comp": "off",
          "react/jsx-props-no-spreading": "off",
          "import/no-extraneous-dependencies": "off",
          "@next/next/no-img-element": "off"
        }
      },
      {
        "files": [
          ".storybook/**/*.js"
        ],
        "rules": {
          "no-param-reassign": "off",
          "import/prefer-default-export": "off"
        }
      },
      {
        "files": [
          ".cypress/**/*.js"
        ],
        "rules": {
          "no-unused-expressions": "off",
          "import/no-extraneous-dependencies": "off"
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "order/order": [
        "custom-properties",
        "declarations"
      ],
      "order/properties-alphabetical-order": true
    }
  },
  "percy": {
    "version": 2,
    "snapshot": {
      "widths": [
        360,
        1500
      ]
    }
  }
}
